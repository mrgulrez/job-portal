{
  "builds": [
    {
      "src": "JobPortal/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "JobPortal/staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "jobs/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "JobPortal/wsgi.py"
    }
  ]
}
